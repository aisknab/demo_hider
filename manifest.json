{
  "manifest_version": 3,
  "name": "Demo Header Logo Hider",
  "description": "Apply Demo Retailer branding to the header logo and account name on supported pages.",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "extension/popup/popup.html"
  },
  "background": {
    "service_worker": "extension/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "extension/scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
