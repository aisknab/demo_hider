{
  "manifest_version": 3,
  "name": "Demo Header Logo Hider",
  "description": "Apply Demo Retailer branding to the header logo and account name on supported pages.",
  "version": "1.0.8",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "extension/icons/icon16.png",
    "32": "extension/icons/icon32.png",
    "48": "extension/icons/icon48.png",
    "128": "extension/icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "extension/icons/icon16.png",
      "32": "extension/icons/icon32.png",
      "48": "extension/icons/icon48.png",
      "128": "extension/icons/icon128.png"
    },
    "default_popup": "extension/popup/popup.html"
  },
  "background": {
    "service_worker": "extension/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://criteo.com/*",
        "*://*.criteo.com/*"
      ],
      "js": [
        "extension/scripts/content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
